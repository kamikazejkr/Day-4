#include <stdio.h>
int p(int n);
int main()
{
    int n;
    printf("\nHow many numbers do u want to add?\n");
    scanf("%d",&n);
    p(n);
    return 0;
}
int p(int n)
{
    int i,s[100],sum=0;
    printf("\nEnter the numbers to be added\n");
    for(i=0;i<n;i++)
      scanf("%d",&s[i]);
    printf("\nThe entered numbers are: \n");
    for(i=0;i<n;i++)
      printf("%d\n",s[i]);
    printf("\nThe addition of the enetered numbers is: \n");
    for(i=0;i<n;i++)
      sum=sum+s[i];
    printf("%d",sum);
    return 0;
}
